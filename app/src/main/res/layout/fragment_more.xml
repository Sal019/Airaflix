<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:background="#151515"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/ggpod"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/amoled_primary_color"
            />

      <LinearLayout
          android:layout_below="@+id/ggpod"
          android:id="@+id/apbar"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <RelativeLayout
              android:background="@color/amoled_primary_color"
              android:id="@+id/appvar"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:gravity="center"
              android:paddingStart="15dp"
              android:paddingEnd="10dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">


              <ImageView
                  android:layout_centerVertical="true"
                  android:id="@+id/gomyacc1"
                  style="@style/MyRipple"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?attr/selectableItemBackgroundBorderless"
                  android:outlineProvider="background"
                  android:src="@drawable/person"
                  app:tint="@color/white" />

              <TextView
                  android:id="@+id/loginanad"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/poppins_bold"
                  android:layout_toEndOf="@+id/gomyacc1"
                  android:textAllCaps="true"
                  android:textColor="@color/white"
                  android:textSize="15dp"
                  android:textStyle="bold"/>



          </RelativeLayout>
          <RelativeLayout
              android:visibility="gone"
              android:background="@color/amoled_primary_color"
              android:id="@+id/appvaruser"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">


              <ImageView
                  android:layout_centerVertical="true"
                  android:id="@+id/profileuser"
                  style="@style/MyRipple"
                  android:layout_alignParentStart="true"
                  android:layout_width="30dp"
                  android:layout_height="30dp"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?attr/selectableItemBackgroundBorderless"
                  android:outlineProvider="background"
                  android:src="@drawable/person"
                  app:tint="@color/white" />

              <TextView
                  android:id="@+id/username"
                  android:layout_centerVertical="true"
                  android:layout_marginEnd="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/poppins_bold"
                  android:layout_toEndOf="@+id/profileuser"
                  android:textAllCaps="true"
                  android:textColor="@color/white"
                  android:textSize="15dp"
                  android:textStyle="bold"/>

              <RelativeLayout
                  android:visibility="visible"
                  android:id="@+id/logout"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"

                  android:layout_marginTop="20dp"
                  android:backgroundTint="#404040"
                  android:paddingRight="20dp"
                  android:paddingLeft="20dp"
                  android:background="@drawable/btnflooowolbg"
                  android:foreground="@drawable/click_animation_round">


                  <LinearLayout
                      android:gravity="center"

                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerInParent="true">

                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_marginEnd="10dp"
                          android:fontFamily="@font/poppins_bold"
                          android:text="@string/LOGOUT"
                          android:textColor="@color/white"
                          android:textSize="14dp"
                          android:textStyle="bold" />

                      <RelativeLayout
                          android:background="@drawable/btacc"
                          android:layout_width="20dp"
                          android:layout_height="20dp">

                          <ImageView
                              android:layout_width="10dp"
                              android:layout_height="10dp"
                              android:layout_centerInParent="true"
                              android:src="@drawable/logout"
                              app:tint="#404040" />



                      </RelativeLayout>
                  </LinearLayout>

              </RelativeLayout>

          </RelativeLayout>
      </LinearLayout>
        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/listtool"
            android:layout_below="@+id/apbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/mywaitingd"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/btacc"
                        android:layout_width="67dp"
                        android:layout_height="67dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/downloadj"
                            app:tint="@color/white" />



                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="5dp"

                        android:ellipsize="end"
                        android:layout_below="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Downloads"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>



        </HorizontalScrollView>


        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/gositting"
            android:layout_below="@+id/linlag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#404040"

            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Settings"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_settings"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:id="@+id/goplans"
            android:layout_below="@+id/listtool"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:backgroundTint="#03A9F4"
            android:layout_marginEnd="39dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/btnflooowolbg"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Premium"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/diamond"
                    app:tint="@color/white" />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listtool"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="39dp"
            android:layout_marginEnd="39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linlag"

                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/looowolbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_kufi"
                        android:text="@string/Change_Language"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/nbreplace"
                        app:boxBackgroundColor="@color/white"
                        app:endIconTint="@color/white"
                        app:helperTextTextColor="@color/white"
                        android:textColorHint="@color/white"
                        app:boxStrokeColor="@color/white"
                        app:boxStrokeWidth="3dp"
                        android:hint="@string/Languages"
                        app:hintTextAppearance="@style/tabtext"
                        app:hintTextColor="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_height="wrap_content">


                        <AutoCompleteTextView
                            android:id="@+id/auto_complet"
                            android:inputType="none"
                            android:background="#404040"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/looowolbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_kufi"
                        android:text="Open Episodes With "
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>


                    <Spinner
                        android:layout_marginBottom="10dp"
                        android:id="@+id/choseplayer"
                        android:popupBackground="#404040"
                        android:popupTheme="@style/SpinnerTheme"                        android:theme="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/looowolbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_kufi"
                        android:text="Download Episodes With "
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>


                    <Spinner
                        android:layout_marginBottom="10dp"
                        android:id="@+id/chosedownlo"
                        android:theme="@style/SpinnerTheme"
                        android:popupBackground="#404040"
                        android:popupTheme="@style/SpinnerTheme"
                        android:spinnerMode="dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/looowolbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_kufi"
                        android:text="تحميل الكوميكس بواسطة ؟"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold"/>


                    <Spinner
                        android:layout_marginBottom="10dp"
                        android:id="@+id/chosedownlocomics"
                        android:spinnerMode="dropdown"
                        android:theme="@style/SpinnerTheme"
                        android:popupBackground="#404040"
                        android:popupTheme="@style/SpinnerTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/mylistgo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#404040"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/My_List"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:background="@drawable/btacc"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/menuburger"
                            app:tint="#404040" />



                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/gototelegr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#404040"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Follow us on Telegram"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/telegram"
                        app:tint="@color/white" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/gotosite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#404040"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:background="@drawable/btnflooowolbg"
                android:foreground="@drawable/click_animation_round">


                <LinearLayout
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Visit Site"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:rotation="180"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@color/white" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>




    </RelativeLayout>


</ScrollView>

