<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgdark"
    android:layout_height="match_parent"
    tools:context=".Activities.ShowInfoActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/youtubepl"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgviews"
                android:src="@drawable/tiger_king"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:src="@drawable/b"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:id="@+id/gooback"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/likeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/likeicon"
                    android:src="@drawable/pluss"
                    app:tint="@color/white"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/titleser"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:showDividers="middle"
                    android:divider="@drawable/empty_tall_divider"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_weight="1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/yeartxt"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/genertxt"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp"
                            android:textAllCaps="true"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/seasonscouct"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/viewstxt"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="10dp"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/eye"
                            app:tint="@color/white"
                            android:layout_width="14dp"
                            android:layout_height="14dp"/>
                    </LinearLayout>










                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="-20dp"
            android:id="@+id/showinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_marginTop="12dp"
                    android:id="@+id/Gotoepusode"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/btnflwolbg"
                    android:foreground="@drawable/click_animation_round">


                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/play" />

                        <TextView
                            android:id="@+id/typeofplacetxr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Episodes"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/bgdark"
                            android:textStyle="bold"
                            android:textSize="12dp" />


                    </LinearLayout>

                </RelativeLayout>
                <TextView
                    android:id="@+id/storytxt"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="4"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kim Shin is an immortal “goblin,” and has the rather honorable title of being the Protector of Souls. His roommate Wang Yeo also happens to have the equally lofty, if thoroughly opposing, title of Angel of Death, and he acts as the storied grim reaper that claims souls. However, both these devilishly handsome angels have a problem: Wang Yeo has amnesia and Kim Shin wants to end his own life. Unfortunately for goblins, the only way to defeat immortality is to marry a human bride. For that purpose, Kim Shin decides to win over Ji Eun Tak an optimistic high school girl who he thinks will be the priestess that ends his cursed existence."/>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/pin_rlt"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/pitee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_alignParentStart="true"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/More_Like_This"/>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pin_rv"
                            android:layout_below="@+id/pitee"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/progpin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@color/white" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/cast_rlt"
                        android:layout_marginBottom="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/cast_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_marginTop="12dp"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_alignParentStart="true"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Cast"/>
                        </RelativeLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cast_rv"
                            android:layout_below="@+id/cast_rl"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ProgressBar
                            android:id="@+id/progcast"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@color/white" />



                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>


    </LinearLayout>





</ScrollView>